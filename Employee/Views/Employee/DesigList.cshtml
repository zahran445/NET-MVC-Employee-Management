

@{
    ViewBag.Title = "Add Employee";

    var designationList = ViewBag.DesignationList as List<Employee.Models.Data.TblMaster>;

}





<h1> Designation List</h1>
<button onclick="trip()" class="btn btn-primary">Add Designation</button>

<hr />
<table>
    <thead>
        <tr>
            <th style="border:1px solid black">ID</th>
            <th style="border:1px solid black">Designation Name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var row in designationList)
        {
            <tr>
                <td style="border:1px solid black">@row.MasterID</td>
                <td style="border:1px solid black">@row.MasterName</td>
                <td>
                    <button onclick="edit(@row.MasterID)">Editt </button>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    function edit(id) {
        alert(id);
        window.location.href = "/Employee/AddDesignation?id=" + id;
    }

    function trip() {
        window.location.href = "/Employee/AddDesignation"
    }
</script>